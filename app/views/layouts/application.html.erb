<!DOCTYPE html>
<html>
  <head>
    <title>EatinRor</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag 'eatin-favicon.ico' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar-custom navbar-expand-lg navbar-light">
      <%= link_to "Home", root_path, class: 'navbar-brand' %>
      <%= image_tag (asset_path 'eatin-black.svg'), class: 'nav-logo' %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav">
          <% if !user_signed_in? %>
            <li class="nav-item active">
              <%= link_to "Sign In", new_user_session_path, class: 'nav-link' %> 
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to current_user.first_name, user_path(current_user.id), class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to "Groups", groups_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to "Friends", friendships_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'nav-link' %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
    
    <p class="notice alert-success"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>

  </body>
</html>